<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pedido.PedidoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">


           <ImageView
               android:id="@+id/iView1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="16dp"
               android:src="@drawable/ic_point_black_24dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.15"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               tools:ignore="MissingConstraints" />



           <ImageView
               android:id="@+id/iView2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="16dp"
               android:src="@drawable/ic_point_black_24dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               tools:ignore="MissingConstraints" />

           <ImageView
               android:id="@+id/iView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="16dp"
               android:src="@drawable/ic_point_black_24dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.85"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               tools:ignore="MissingConstraints" />

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/constraintLayout12"
               android:layout_width="0dp"
               android:layout_height="2dp"
               android:background="@color/gray"
               app:layout_constraintBottom_toBottomOf="@+id/iView2"
               app:layout_constraintEnd_toStartOf="@+id/iView2"
               app:layout_constraintStart_toEndOf="@+id/iView1"
               app:layout_constraintTop_toTopOf="@+id/iView2"
               tools:ignore="MissingConstraints">


           </androidx.constraintlayout.widget.ConstraintLayout>

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/constraintLayout13"
               android:layout_width="0dp"
               android:layout_height="2dp"
               android:background="@color/gray"
               app:layout_constraintBottom_toBottomOf="@+id/iView2"
               app:layout_constraintEnd_toStartOf="@+id/iView3"
               app:layout_constraintStart_toEndOf="@+id/iView2"
               app:layout_constraintTop_toTopOf="@+id/iView2"
               tools:ignore="MissingConstraints"></androidx.constraintlayout.widget.ConstraintLayout>

           <TextView
               android:id="@+id/textView25"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginBottom="16dp"
               android:text="Paso1"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="@+id/iView1"
               app:layout_constraintStart_toStartOf="@+id/iView1"
               app:layout_constraintTop_toBottomOf="@+id/iView1" />

           <TextView
               android:id="@+id/textView26"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Paso2"
               app:layout_constraintEnd_toEndOf="@+id/iView2"
               app:layout_constraintStart_toStartOf="@+id/iView2"
               app:layout_constraintTop_toBottomOf="@+id/iView2" />

           <TextView
               android:id="@+id/textView27"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Paso3"
               app:layout_constraintEnd_toEndOf="@+id/iView3"
               app:layout_constraintStart_toStartOf="@+id/iView3"
               app:layout_constraintTop_toBottomOf="@+id/iView3" />

           <ProgressBar
               android:id="@+id/progressBar"
               style="?android:attr/progressBarStyle"
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:fromDegrees="0"
               android:toDegrees="1080"
               app:layout_constraintBottom_toBottomOf="@+id/iView1"
               app:layout_constraintEnd_toEndOf="@+id/iView1"
               app:layout_constraintStart_toStartOf="@+id/iView1"
               app:layout_constraintTop_toTopOf="@+id/iView1" />
       </androidx.constraintlayout.widget.ConstraintLayout>

<!--
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary" />

            -->
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>